<div class="container">

  <div class="row heading">
    <div class="col-md-12">
      <h1>Edit Wiki</h1>
      <small>
        submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
      </small>
    </div>
  </div>

  <div class="row new-wiki">
    <div class="col-md-12">
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <% if policy(@wiki).destroy? %>
        <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
      <% end %>  </div>
  </div>

  <% if @wiki.private? %>
  <div class="row content">
    <div class="col-md-8 body">
      <%= form_for @wiki do |f| %>
        <%= f.label :blend_name %>
        <%= f.text_field :blend_name, class: 'form-control', placeholder: "Enter wiki title" %>

        <%= f.label :notes %>
        <%= f.text_area :notes, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>

        <% if current_user.admin? || (current_user.premium? && current_user.id == @wiki.user_id) %>
          <%= f.label :private, class: 'checkbox' do %>
            <%= f.check_box :private %> Private wiki
          <% end %>
        <% end %>

        <%= f.submit "Save", class: 'btn btn-success' %>
      <% end %>

    </div>
    <div class="col-md-4 collaborators">
      <%= render partial: 'collaborators/list' %>
      <%= render partial: 'collaborators/form', locals: { wiki: @wiki } %>
    </div>
  </div>
  <% else %>
  <div class="row content">
    <div class="col-md-12 body">
      <%= form_for @wiki do |f| %>
        <%= f.label :blend_name %>
        <%= f.text_field :blend_name, class: 'form-control', placeholder: "Enter wiki title" %>

        <%= f.label :notes %>
        <%= f.text_area :notes, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>

        <% if current_user.admin? || (current_user.premium? && current_user.id == @wiki.user_id) %>
          <%= f.label :private, class: 'checkbox' do %>
            <%= f.check_box :private %> Private wiki
          <% end %>
        <% end %>

        <%= f.submit "Save", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
